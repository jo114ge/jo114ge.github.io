---
import { PORTFOLIO_NAME, PORTFOLIO_EMAIL, PORTFOLIO_GITHUB, PORTFOLIO_LINKEDIN } from '../consts';
---

<section class="contact" id="contact">
  <div class="container">
    <div class="contact-content">
      <h2 class="contact-title">Let's Connect</h2>
      <p class="contact-description">
        I'm always interested in new opportunities and collaborations in cybersecurity. 
        Whether you need incident response expertise, security architecture guidance, 
        or want to discuss the latest in cloud security, let's talk.
      </p>
      
      <div class="contact-grid">
        <!-- Contact Form -->
        <div class="contact-form-section">
          <h3 class="section-subtitle">Send me a message</h3>
          <div class="success-message" id="success-message">
            âœ… Message sent successfully! I'll reply soon.
          </div>
          <form class="contact-form" method="POST" action="https://formspree.io/f/YOUR_FORM_ID" id="contact-form">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="_replyto" required>
            </div>
            
            <div class="form-group">
              <label for="subject">Subject</label>
              <input type="text" id="subject" name="_subject" required>
            </div>
            
            <div class="form-group">
              <label for="message">Message</label>
              <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            
            <!-- Formspree honeypot field -->
            <input type="text" name="_gotcha" style="display:none">
            
            <!-- Redirect after submission -->
            <input type="hidden" name="_next" value="https://tu-usuario.github.io/tu-repo/?success=true#contact">
            
            <!-- GDPR Compliance Section -->
            <div class="gdpr-section">
              <div class="gdpr-checkbox">
                <input type="checkbox" id="gdpr-consent" name="gdpr-consent" required>
                <label for="gdpr-consent" class="checkbox-label">
                  I agree to the processing of my personal data according to the privacy policy
                </label>
              </div>
              
              <div class="gdpr-info">
                <h4 class="gdpr-title">Data Protection Information (GDPR)</h4>
                <div class="gdpr-content">
                  <p><strong>Data Controller:</strong> {PORTFOLIO_NAME}</p>
                  <p><strong>Purpose:</strong> To respond to your inquiry and establish professional contact.</p>
                  <p><strong>Legal Basis:</strong> Your explicit consent (Art. 6.1.a GDPR).</p>
                  <p><strong>Data Storage:</strong> Your data will be stored only as long as necessary to respond to your inquiry and for potential future professional contact.</p>
                  <p><strong>Your Rights:</strong> You have the right to access, rectify, delete, restrict processing, and data portability. You can withdraw your consent at any time.</p>
                  <p><strong>Contact:</strong> For any questions about data processing, contact me at <a href={`mailto:${PORTFOLIO_EMAIL}`}>{PORTFOLIO_EMAIL}</a></p>
                </div>
              </div>
            </div>
            
            <button type="submit" class="form-submit" id="submit-btn">
              <span class="btn-text">Send Message</span>
              <span class="btn-loading" style="display: none;">Sending...</span>
            </button>
          </form>
        </div>

        <!-- Contact Methods -->
        <div class="contact-methods-section">
          <h3 class="section-subtitle">Other ways to reach me</h3>
          <div class="contact-methods">
            <a href={`mailto:${PORTFOLIO_EMAIL}`} class="contact-method">
              <div class="method-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
              </div>
              <div class="method-info">
                <h4 class="method-title">Email</h4>
                <p class="method-value">{PORTFOLIO_EMAIL}</p>
              </div>
            </a>

            <a href={PORTFOLIO_LINKEDIN} target="_blank" class="contact-method">
              <div class="method-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <div class="method-info">
                <h4 class="method-title">LinkedIn</h4>
                <p class="method-value">Connect professionally</p>
              </div>
            </a>

            <a href={PORTFOLIO_GITHUB} target="_blank" class="contact-method">
              <div class="method-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <div class="method-info">
                <h4 class="method-title">GitHub</h4>
                <p class="method-value">View my projects</p>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    padding: 5rem 0;
    background: #0f0f0f;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .contact-content {
    text-align: center;
  }

  .contact-title {
    font-size: 2.5rem;
    font-weight: 300;
    margin-bottom: 1.5rem;
    color: #ffffff;
    letter-spacing: -0.02em;
  }

  .contact-description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #d0d0d0;
    margin-bottom: 4rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    text-align: left;
  }

  .section-subtitle {
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 2rem;
    color: #ffffff;
    border-bottom: 1px solid #333;
    padding-bottom: 0.5rem;
  }

  /* Contact Form Styles */
  .contact-form {
    background: #1a1a1a;
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid #333;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: #ffffff;
    font-weight: 500;
    font-size: 0.9rem;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    background: #0f0f0f;
    border: 1px solid #333;
    border-radius: 6px;
    color: #ffffff;
    font-size: 1rem;
    transition: border-color 0.2s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #555;
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: #707070;
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  /* GDPR Styles */
  .gdpr-section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: #2a2a3a;
    border: 2px solid #4a4a6a;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(74, 74, 106, 0.2);
  }

  .gdpr-checkbox {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .gdpr-checkbox input[type="checkbox"] {
    width: 18px;
    height: 18px;
    margin-top: 0.2rem;
    accent-color: #6b73ff;
    cursor: pointer;
  }

  .checkbox-label {
    color: #ffffff;
    font-size: 0.95rem;
    line-height: 1.4;
    cursor: pointer;
    font-weight: 500;
  }

  .gdpr-info {
    border-top: 2px solid #4a4a6a;
    padding-top: 1rem;
  }

  .gdpr-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 1rem;
  }

  .gdpr-content {
    font-size: 0.85rem;
    line-height: 1.5;
    color: #e0e0e0;
  }

  .gdpr-content p {
    margin-bottom: 0.75rem;
  }

  .gdpr-content p:last-child {
    margin-bottom: 0;
  }

  .gdpr-content strong {
    color: #ffffff;
    font-weight: 600;
  }

  .gdpr-content a {
    color: #8b93ff;
    text-decoration: underline;
    font-weight: 500;
  }

  .gdpr-content a:hover {
    color: #a5b1ff;
  }

  .form-submit {
    width: 100%;
    padding: 1rem;
    background: #ffffff;
    color: #0f0f0f;
    border: none;
    border-radius: 6px;
    font-weight: 500;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .form-submit:hover {
    background: #e0e0e0;
    transform: translateY(-1px);
  }

  .form-submit:disabled {
    background: #333;
    color: #666;
    cursor: not-allowed;
    transform: none;
  }

  /* Contact Methods Styles */
  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: #1a1a1a;
    border: 1px solid #333;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .contact-method:hover {
    background: #222;
    border-color: #555;
    transform: translateY(-2px);
  }

  .method-icon {
    width: 48px;
    height: 48px;
    background: #333;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    flex-shrink: 0;
  }

  .method-info {
    text-align: left;
  }

  .method-title {
    font-size: 1.1rem;
    font-weight: 500;
    color: #ffffff;
    margin-bottom: 0.25rem;
  }

  .method-value {
    font-size: 0.9rem;
    color: #a0a0a0;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .contact-title {
      font-size: 2rem;
    }

    .contact-description {
      font-size: 1rem;
      margin-bottom: 3rem;
    }

    .contact-form {
      padding: 1.5rem;
    }

    .gdpr-section {
      padding: 1rem;
    }

    .gdpr-content {
      font-size: 0.75rem;
    }

    .contact-method {
      padding: 1.25rem;
    }
  }

  /* Loading states */
  .form-submit:disabled .btn-text {
    display: none;
  }

  .form-submit:disabled .btn-loading {
    display: inline !important;
  }

  /* Success message */
  .success-message {
    background: #10b981;
    color: white;
    padding: 1rem;
    border-radius: 6px;
    margin-bottom: 1.5rem;
    display: none;
  }

  .success-message.show {
    display: block;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const successMessage = document.getElementById('success-message') as HTMLElement;
    
    if (!form || !submitBtn || !successMessage) return;
    
    const btnText = submitBtn.querySelector('.btn-text') as HTMLElement;
    const btnLoading = submitBtn.querySelector('.btn-loading') as HTMLElement;

    // Check if coming from a successful submission
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('success') === 'true') {
      successMessage.classList.add('show');
      form.style.display = 'none';
      setTimeout(() => {
        successMessage.classList.remove('show');
        form.style.display = 'block';
      }, 5000);
    }

    form.addEventListener('submit', function(e) {
      // Show loading state
      submitBtn.disabled = true;
      if (btnText) btnText.style.display = 'none';
      if (btnLoading) btnLoading.style.display = 'inline';
      
      // Optional: Additional validation here
      const emailInput = form.querySelector('input[name="_replyto"]') as HTMLInputElement;
      const messageInput = form.querySelector('textarea[name="message"]') as HTMLTextAreaElement;
      const gdprInput = form.querySelector('input[name="gdpr-consent"]') as HTMLInputElement;
      
      if (!emailInput?.value || !messageInput?.value || !gdprInput?.checked) {
        e.preventDefault();
        alert('Please complete all required fields and accept the data processing consent.');
        
        // Restore button
        submitBtn.disabled = false;
        if (btnText) btnText.style.display = 'inline';
        if (btnLoading) btnLoading.style.display = 'none';
        return;
      }

      // If everything is fine, the form will be submitted normally
      console.log('Form submitted successfully');
    });
  });
</script> 