---
const projects = [
  {
    title: "Freelance Incident Response",
    period: "2023 – Present",
    description: "Independent security consulting services specializing in incident response, forensics analysis, and threat hunting for small to medium businesses.",
    technologies: ["DFIR", "Threat Hunting", "Forensics", "SIEM", "Splunk"],
    status: "ongoing"
  },
  {
    title: "Cybersecurity Instructor",
    period: "2023 – Present",
    company: "The Bridge",
    description: "Teaching cybersecurity fundamentals, hands-on labs, and real-world incident response scenarios to aspiring security professionals.",
    technologies: ["Training", "SIEM", "Cloud Security", "DevSecOps"],
    status: "ongoing"
  },
  {
    title: "EuskalHack 2025 Speaker",
    period: "2025",
    description: "Conference speaker at EuskalHack 2025, presenting on advanced threat detection and response strategies in cloud environments.",
    technologies: ["Public Speaking", "Threat Detection", "Cloud Security"],
    status: "upcoming"
  }
];

const skills = {
  "Cloud Security": ["AWS", "GCP", "Azure", "GuardDuty", "Security Command Center"],
  "Security Tools": ["Splunk", "CrowdStrike", "Prisma Cloud", "Netskope", "Microsoft Defender"],
  "DevSecOps": ["GitLab CI/CD", "SAST", "DAST", "Terraform", "Ansible"],
  "Programming": ["Python", "Bash", "JavaScript", "Infrastructure as Code"],
  "Incident Response": ["DFIR", "Threat Hunting", "Forensics", "MITRE ATT&CK", "SIEM"]
};
---

<section class="projects" id="projects">
  <div class="container">
    <h2 class="section-title">Projects & Skills</h2>
    
    <div class="projects-grid">
      <div class="projects-section">
        <h3 class="subsection-title">Side Projects</h3>
        <div class="projects-list">
          {projects.map((project) => (
            <div class="project-item">
              <div class="project-header">
                <h4 class="project-title">{project.title}</h4>
                <span class={`project-status ${project.status}`}>
                  {project.status === 'ongoing' ? 'Active' : 
                   project.status === 'upcoming' ? 'Upcoming' : 'Completed'}
                </span>
              </div>
              {project.company && (
                <div class="project-company">{project.company}</div>
              )}
              <div class="project-period">{project.period}</div>
              <p class="project-description">{project.description}</p>
              <div class="project-technologies">
                {project.technologies.map(tech => (
                  <span class="tech-tag">{tech}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>

      <div class="skills-section">
        <h3 class="subsection-title">Technical Skills</h3>
        <div class="skills-grid">
          {Object.entries(skills).map(([category, techs]) => (
            <div class="skill-category">
              <h4 class="category-title">{category}</h4>
              <div class="skills-list">
                {techs.map(tech => (
                  <span class="skill-tag">{tech}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .projects {
    padding: 5rem 0;
    background: #0a0a0a;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 300;
    text-align: center;
    margin-bottom: 4rem;
    color: #ffffff;
    letter-spacing: -0.02em;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  .subsection-title {
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 2rem;
    color: #ffffff;
    border-bottom: 1px solid #333;
    padding-bottom: 0.5rem;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .project-item {
    background: #1a1a1a;
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid #333;
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 1rem;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 500;
    color: #ffffff;
    line-height: 1.3;
  }

  .project-status {
    font-size: 0.8rem;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-weight: 500;
    white-space: nowrap;
  }

  .project-status.ongoing {
    background: #2a4a2a;
    color: #90ee90;
  }

  .project-status.upcoming {
    background: #4a4a2a;
    color: #ffff90;
  }

  .project-status.completed {
    background: #333;
    color: #d0d0d0;
  }

  .project-company {
    font-size: 1rem;
    color: #a0a0a0;
    margin-bottom: 0.5rem;
  }

  .project-period {
    font-size: 0.9rem;
    color: #707070;
    margin-bottom: 1rem;
  }

  .project-description {
    color: #d0d0d0;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .project-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    background: #333;
    color: #d0d0d0;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 400;
  }

  .skills-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .skill-category {
    background: #1a1a1a;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #333;
  }

  .category-title {
    font-size: 1.1rem;
    font-weight: 500;
    color: #ffffff;
    margin-bottom: 1rem;
  }

  .skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    background: #2a2a2a;
    color: #ffffff;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .project-item {
      padding: 1.5rem;
    }

    .project-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .skill-category {
      padding: 1.25rem;
    }
  }
</style> 