---
const education = [
  {
    degree: "MSc Artificial Intelligence",
    institution: "Universidad de Valencia",
    period: "2019 – Unfinished",
    description: "Advanced studies in machine learning, deep learning, and AI systems architecture."
  },
  {
    degree: "Bachelor Computer Science",
    institution: "Universidad de Valencia",
    period: "2014 – 2018",
    description: "Comprehensive computer science education with focus on software engineering and systems."
  },
  {
    degree: "Bachelor Physics",
    institution: "Universidad de Valencia",
    period: "2012 – 2016",
    description: "Strong foundation in mathematics, physics, and analytical problem-solving."
  }
];

const certifications = [
  { name: "ISC2 Certified in Cybersecurity (CC)", level: "Professional", year: "2024" },
  { name: "SANS GIAC Security Essentials (GSEC)", level: "Expert", year: "2023" },
  { name: "Google Cloud Professional Cloud Security Engineer", level: "Professional", year: "2023" },
  { name: "AWS Certified Cloud Practitioner", level: "Foundation", year: "2022" },
  { name: "HashiCorp Certified: Terraform Associate", level: "Professional", year: "2022" },
  { name: "Cisco Certified Network Associate (CCNA)", level: "Professional", year: "2021" }
];
---

<section class="education" id="education">
  <div class="container">
    <h2 class="section-title">Education & Certifications</h2>
    
    <div class="education-grid">
      <div class="education-section">
        <h3 class="subsection-title">Education</h3>
        <div class="education-list">
          {education.map((edu) => (
            <div class="education-item">
              <h4 class="education-degree">{edu.degree}</h4>
              <div class="education-institution">{edu.institution}</div>
              <div class="education-period">{edu.period}</div>
              <p class="education-description">{edu.description}</p>
            </div>
          ))}
        </div>
      </div>

      <div class="certifications-section">
        <h3 class="subsection-title">Certifications</h3>
        <div class="certifications-grid">
          {certifications.map((cert) => (
            <div class="certification-item">
              <div class="certification-header">
                <h4 class="certification-name">{cert.name}</h4>
                <span class={`certification-level ${cert.level.toLowerCase()}`}>{cert.level}</span>
              </div>
              <div class="certification-year">{cert.year}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .education {
    padding: 5rem 0;
    background: #0f0f0f;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 300;
    text-align: center;
    margin-bottom: 4rem;
    color: #ffffff;
    letter-spacing: -0.02em;
  }

  .education-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  .subsection-title {
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 2rem;
    color: #ffffff;
    border-bottom: 1px solid #333;
    padding-bottom: 0.5rem;
  }

  .education-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .education-item {
    background: #1a1a1a;
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid #333;
  }

  .education-degree {
    font-size: 1.25rem;
    font-weight: 500;
    color: #ffffff;
    margin-bottom: 0.5rem;
  }

  .education-institution {
    font-size: 1rem;
    color: #a0a0a0;
    margin-bottom: 0.5rem;
  }

  .education-period {
    font-size: 0.9rem;
    color: #707070;
    margin-bottom: 1rem;
  }

  .education-description {
    color: #d0d0d0;
    line-height: 1.5;
  }

  .certifications-grid {
    display: grid;
    gap: 1rem;
  }

  .certification-item {
    background: #1a1a1a;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #333;
  }

  .certification-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.5rem;
    gap: 1rem;
  }

  .certification-name {
    font-size: 1rem;
    font-weight: 500;
    color: #ffffff;
    line-height: 1.3;
  }

  .certification-level {
    font-size: 0.8rem;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-weight: 500;
    white-space: nowrap;
  }

  .certification-level.expert {
    background: #333;
    color: #ffffff;
  }

  .certification-level.professional {
    background: #2a2a2a;
    color: #d0d0d0;
  }

  .certification-level.foundation {
    background: #222;
    color: #a0a0a0;
  }

  .certification-year {
    font-size: 0.9rem;
    color: #707070;
  }

  @media (max-width: 768px) {
    .education-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .education-item {
      padding: 1.5rem;
    }

    .certification-item {
      padding: 1.25rem;
    }

    .certification-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style> 